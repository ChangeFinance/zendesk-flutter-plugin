<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <dimen name="chat_fragment_height" ns1:ignore="MissingDefaultResource">500dp</dimen>
    <style name="ZopimChatTheme" parent="ZopimChatTheme.Light.Dialog"/>
    <style name="ZopimChatTheme.Dark.Dialog" parent="_ZopimChatTheme.Dark.Dialog"/>
    <style name="ZopimChatTheme.Dark.DialogWhenLarge" parent="_ZopimChatTheme.Dark.DialogWhenLarge"/>
    <style name="ZopimChatTheme.Light.Dialog" parent="_ZopimChatTheme.Light.Dialog"/>
    <style name="ZopimChatTheme.Light.DialogWhenLarge" parent="_ZopimChatTheme.Light.DialogWhenLarge"/>
    <style name="_ZopimChatTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="_ZopimChatTheme.Dark.DialogWhenLarge" parent="Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
